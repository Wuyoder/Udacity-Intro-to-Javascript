var num = 99;
while (num > 0) {
    if(num > 2){
        r=num;
        console.log(r +" bottles of juice on the wall! "+num+" bottles of juice! Take one down, pass it around... "+(num-1)+" bottles of juice on the wall!");// check value of num
    }else if(num === 2){
        console.log(num+" bottles of juice on the wall! "+num+" bottles of juice! Take one down, pass it around... "+(num-1)+" bottle of juice on the wall!");// check value of num
    }else{
        console.log(num+" bottle of juice on the wall! "+num+" bottle of juice! Take one down, pass it around... "+(num-1)+" bottles of juice on the wall!");// check value of num
    }
    num -= 1;
}
